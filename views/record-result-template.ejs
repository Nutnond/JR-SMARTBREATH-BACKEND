                                        <span class="status-badge <%= statusClass %>">
                                            <%= statusText %>
                                        </span>
                                        <% if (ratio !==null && !isNaN(ratio)) { %>
                                            <div style="margin-top: 6px; font-size: 13px; color: #666;">
                                                อัตราส่วน: <%= ratio.toFixed(2) %>
                                            </div>
                                            <% } %>
                                    </div>
                        </div>
